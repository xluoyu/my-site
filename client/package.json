    "vite-plugin-md": "^0.11.9",
    "vite-plugin-pages": "^0.22.0",
    "vite-plugin-windicss": "^1.8.3",
    "vitest": "^0.7.6",
    "vue-tsc": "^0.29.8",
    "windicss": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"

  "dependencies": {
    "@element-plus/icons-vue": "^1.0.0",
    "@vueuse/core": "^7.7.1",
    "axios": "^0.26.0",
    "dayjs": "^1.10.8",
    "element-plus": "^2.0.4",
    "pinia": "^2.0.11",
    "vue": "^3.2.25",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.8",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/test-utils": "^2.0.0-rc.17",
